<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".NotificationTapAction">

  <ImageView
      android:id="@+id/image_alert_covid"
      android:layout_width="wrap_content"
      android:layout_height="400dp"
      android:layout_marginStart="0dp"
      android:src="@drawable/covid_alert"></ImageView>

  <TextView
      android:layout_width="384dp"
      android:layout_height="wrap_content"
      android:layout_below="@id/image_alert_covid"
      android:layout_alignParentTop="true"
      android:layout_centerHorizontal="true"
      android:layout_marginStart="16dp"
      android:layout_marginTop="423dp"

      android:text="You've been found near by Covid-19 exposed area. Please wear mask and stay safe."
      android:textAlignment="gravity"
      android:textColor="#ED2E44"
      android:textSize="40dp"
      android:textStyle="italic"
      tools:ignore="MissingConstraints"
      tools:layout_editor_absoluteY="122dp"></TextView>


</RelativeLayout>
