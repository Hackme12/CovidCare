<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#69ACDD"
    android:padding="10dp"
    tools:context=".Login">

    <TextView
        android:textSize="30dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:text="Full Name"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/fNameEditText_update"
        android:background="@drawable/whitebuttonlayout"
        android:layout_marginTop="10dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="10dp"
        android:textSize="30dp"

        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:text= "Email"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/emailEditText_update"
        android:layout_marginTop="10dp"
        android:background="@drawable/whitebuttonlayout"
        android:layout_width="match_parent"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="10dp"
        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:text= "Phone Number"
        android:layout_height="wrap_content"/>


    <EditText
        android:id="@+id/phoneEditText_update"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:background="@drawable/whitebuttonlayout"
        android:inputType="number"
        android:textAlignment="center"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="10dp"

        android:textColor="@color/black"
        android:textSize="30dp"
        android:textAlignment="center"
        android:layout_width="match_parent"
        android:text= "Emergency Contact Number"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/phone_emergencyEdittext_update"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:background="@drawable/whitebuttonlayout"
        android:inputType="number"
        android:textAlignment="center"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="10dp"

        android:textSize="30dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:layout_width="match_parent"
        android:text= "DOB"
        android:layout_height="wrap_content"/>


    <EditText
        android:id="@+id/Dob_editText_update"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textColorHint="#81000000"
        android:hint="MM/DD/YYYY"
        android:background="@drawable/whitebuttonlayout"
        android:inputType="date"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/SubmitBtn"
        android:textColor="@color/black"
        android:background="@drawable/box_layout"
        android:layout_width="130dp"
        android:layout_height="40dp"
        android:text="Submit"
        android:layout_marginLeft="130dp" />


</LinearLayout>