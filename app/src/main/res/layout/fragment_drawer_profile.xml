<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#69ACDD"
    android:padding="10dp"
    tools:context=".Login">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/icon_cocvid_1"></ImageView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update profile"
        android:textStyle="italic"
        android:textAlignment="center"
        android:textColor="#0944F4"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:paddingTop="90dp"
        android:background="@drawable/layout_register"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/fNameEditText_update"
            android:layout_margin="15dp"
            android:hint="Full name"

            android:textAlignment="center"
            android:background="@drawable/layout_register_box"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <EditText
            android:id="@+id/emailEditText_update"
            android:textAlignment="center"
            android:hint="Email Address"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/layout_register_box"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>



        <EditText
            android:id="@+id/phoneEditText_update"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:hint="Phone Number"
            android:textAlignment="center"
            android:background="@drawable/layout_register_box"
            android:layout_width="match_parent"
            android:inputType="number"
            android:layout_height="50dp"/>



        <EditText
            android:id="@+id/Dob_editText_update"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:hint="DOB: MM/DD/YYYY"
            android:textAlignment="center"
            android:background="@drawable/layout_register_box"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <Button
            android:id="@+id/SubmitBtn"
            android:backgroundTint="@color/white"
            android:layout_marginTop="20dp"
            android:textColor="@color/black"
            android:background="@drawable/box_layout"
            android:layout_width="130dp"
            android:layout_height="62dp"
            android:text="Submit"
            android:layout_marginLeft="120dp" />

    </LinearLayout>
</LinearLayout>